{
  "manifest_version": 3,
  "name": "Password viewer",
  "description": "Makes all password fields on the page visible by click on a button",
  "version": "1.0.0",
  "action": {
    "default_icon": {
      "128": "128.png"
    }
  },
  "icons": {
    "128": "128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["activeTab", "scripting"],
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+B",
        "mac": "Command+B"
      }
    }
  }
}
